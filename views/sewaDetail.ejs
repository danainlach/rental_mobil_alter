<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Sewa Mobil</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .img-fluid{
            width: 560px;
            height: auto;
        }
        .col-md-6{
            height: 350px;
            font-size: 24px;
            margin-top: 20px;
        }
        .btn-primary{
            width: 400px !important;
            height: fit-content;
            font-size: 24px;
            margin-top: 30px !important;
        }
        .col-md-6 .img-fluid{
            margin-top: -20px;
        }
        .t{
            height: 50px;
            font-weight: bolder;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    <div class="main-content">
        <div class="container">
            <h1 class="text-primary text-center mb-4">Detail Sewa Mobil</h1>
            <div class="card p-4">
                <div class="row">
                    <!-- Kolom Gambar -->
                    <div class="col-md-6">
                        <% if (barang.gambar) { %>
                            <img src="<%= barang.gambar %>" alt="<%= barang.nama %>" class="img-fluid rounded">
                        <% } else { %>
                            <div class="text-center text-muted">No Image Available</div>
                        <% } %>
                    </div>
                    <!-- Kolom Detail -->
                    <div class="col-md-6">
                        <h3 class="t"><%= barang.nama %></h3>
                        <p><strong>Stok:</strong> <%= barang.stok %></p>
                        <p><strong>Harga:</strong> Rp <%= barang.harga.toLocaleString('id-ID') %></p>
                        <p><strong>Keterangan:</strong> <%= barang.keterangan %></p>
                        <form id="requestForm">
                            <input type="hidden" id="itemId" value="<%= barang.id %>">
                            <button type="submit" class="btn btn-primary w-100 mt-3">Request Sewa</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Script Request Form -->
    <script>
        document.getElementById("requestForm").addEventListener("submit", async function(event) {
            event.preventDefault();
            try {
                const itemId = document.getElementById("itemId").value;
                const response = await fetch("/api/request", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ itemId })
                });
                
                if (response.ok) {
                    const result = await response.text();
                    alert(result);
                    window.location.href = "/";
                } else {
                    const error = await response.text();
                    alert("Error: " + error);
                }
            } catch (err) {
                console.error("Error:", err);
                alert("Failed to send request");
            }
        });
    </script>
</body>
</html>