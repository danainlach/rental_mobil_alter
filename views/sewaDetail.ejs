<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Sewa Mobil</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    <div class="main-content">
        <div class="container">
            <h1 class="text-primary text-center mb-4">Detail Sewa Mobil</h1>
            <div class="card p-4">
                <h3><%= barang.nama %></h3>
                <p>Stok: <%= barang.stok %></p>
                <p>Harga: Rp. <%= barang.harga %></p>
                <p>Keterangan: <%= barang.keterangan %></p>
                <form id="requestForm">
                    <input type="hidden" id="itemId" value="<%= barang.id %>">
                    <button type="submit" class="btn btn-primary">Request Sewa</button>
                </form>
            </div>
        </div>
    </div>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Your existing scripts -->
    <script>
        document.getElementById("requestForm").addEventListener("submit", async function(event) {
            event.preventDefault();
            try {
                const itemId = document.getElementById("itemId").value;
                const response = await fetch("/api/request", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ itemId })
                });
                
                if (response.ok) {
                    const result = await response.text();
                    alert(result);
                    window.location.href = "/";
                } else {
                    const error = await response.text();
                    alert("Error: " + error);
                }
            } catch (err) {
                console.error("Error:", err);
                alert("Failed to send request");
            }
        });
    </script>
</body>
</html>
