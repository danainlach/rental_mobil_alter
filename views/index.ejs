            <table class="table table-bordered table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>No.</th>
                        <th>Nama Mobil</th>
                        <th>Stok Mobil</th>
                        <th>Harga Sewa Mobil</th>
                        <th>Keterangan Mobil</th>
                        <% if (user.role === "Admin") { %>
                        <th colspan="2" class="text-center">Aksi</th>
                        <% } %>
                        <% if (user.role === "User") { %>
                            <th colspan="2">Status</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody id="data">
                    <% let nomor = 0; %>
                    <% barang.forEach(items => { %>
                        <% nomor += 1; %>
                        <tr>
                            <td><%= nomor %></td>
                            <td><%= items.nama %></td>
                            <td><%= items.stok %></td>
                            <td><%= items.harga %></td>
                            <td><%= items.keterangan %></td>
                            <% if (user.role === "Admin") { %>
                                <td class='text-center'>
                                    <a href='/edit/<%= items.id %>' class="btn btn-warning btn-sm">Edit</a>
                                </td>
                                <% if (user.role === "Admin") { %> <!-- Periksa apakah role = admin -->
                                    <td class='text-center'>
                                        <button onclick="deleteItem('<%= items.id %>')" class="btn btn-danger btn-sm">Hapus</button>
                                    </td>
                                <% } %>
                            <% } %>
                            <% if (user.role === "User") { %>
                                <td>
                                    <a href="/Sewa/<%= items.id %>" class="btn btn-primary">Sewa!!</a>
                                </td>
                            <% } %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <% if (typeof pagination !== 'undefined') { %>
                <%- include('partials/pagination', { pagination: pagination }) %>
            <% } %>
        </div>
