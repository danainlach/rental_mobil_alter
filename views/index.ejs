<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Mobil</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/table-styles.css">
</head>


<body class="bg-light">
    <%- include('partials/navbar') %>

    <div class="main-content">
        <div class="container">
            <h1 id="judul" class="text-primary text-center mb-4">Data Mobil</h1>
            <div class="d-flex justify-content-end mb-3">
                <% if (user.role === "Admin") { %>
                <a id="baru" href="/tambah" class="table-action-btn btn-view" style="text-decoration: none;">
                    <i class="bi bi-plus-circle"></i> Tambah Data Baru
                </a>
                <% } %>
            </div>

            <div class="card">
                <div class="card-body">
                    <table class="custom-table">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Nama Mobil</th>
                                <th>Stok Mobil</th>
                                <th>Harga Sewa Mobil</th>
                                <th>Keterangan Mobil</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let nomor = 0; %>
                            <% barang.forEach((items, index) => { %>
                                <tr>
                                    <td><%= (pagination.current - 1) * 10 + index + 1 %></td>
                                    <td><%= items.nama %></td>
                                    <td><%= items.stok %></td>
                                    <td>Rp <%= items.harga.toLocaleString('id-ID') %></td>
                                    <td><%= items.keterangan %></td>
                                    <td>
                                        <% if (user.role === "Admin") { %>
                                            <a href='/edit/<%= items.id %>' class="table-action-btn btn-edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button onclick="deleteItem('<%= items.id %>')" class="table-action-btn btn-delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        <% } else { %>
                                            <a href="/sewa/<%= items.id %>" class="table-action-btn btn-view">
                                                <i class="bi bi-cart"></i> Sewa
                                            </a>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

            <% if (typeof pagination !== 'undefined') { %>
                <%- include('partials/pagination', { pagination: pagination }) %>
            <% } %>
        </div>
    </div>


    <script>
        async function deleteItem(id) {
            console.log("Menghapus item dengan ID:", id); // Pastikan id dikirim dengan benar
            if (confirm("Apakah Anda yakin ingin menghapus item ini?")) {
                let result = await fetch(`/api/items/${id}`, {
                    method: "DELETE",
                    credentials: "same-origin" // Pastikan cookie token ikut dikirim
                });
            
                if (result.ok) {
                    alert("Item berhasil dihapus");
                    location.reload();
                } else {
                    alert("Gagal menghapus item");
                }
            }
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS for Sidebar Toggle -->
    <script>
        const menuToggle = document.getElementById("menu-toggle");
        const wrapper = document.getElementById("wrapper");

        menuToggle.addEventListener("click", () => {
            wrapper.classList.toggle("toggled");
        });
    </script>
    <!-- Custom CSS -->
    <style>
        #wrapper {
            display: flex;
            height: 100vh;
        }

        #sidebar {
            width: 250px;
            min-height: 100vh;
        }

        #page-content-wrapper {
            flex-grow: 1;
        }

        .toggled #sidebar {
            margin-left: -250px;
        }

        .our_room .room {
            text-align: center;
            background-color: #fff;
            margin-bottom: 30px;
            transition: ease-in all 0.5s;
        }

        .our_room .room .room_img {
            overflow: hidden;
        }

        #serv_hover {
            position: relative;
            transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
            background-color: white; /* Warna latar awal */
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* Bayangan awal */
            border-radius: 8px; /* Sudut elemen sedikit melengkung */
            overflow: hidden; /* Menghindari elemen di dalamnya keluar */
            padding-top: 20px;
        }
        
        #serv_hover:hover {
            transform: translateY(-10px); /* Efek timbul (elevasi) */
            background-color: black; /* Latar berubah menjadi hitam */
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3); /* Bayangan lebih besar */
        }
        
        #serv_hover .bed_room {
            color: black; /* Warna teks awal */
            transition: color 0.3s ease;
        }
        
        #serv_hover:hover .bed_room {
            color: white; /* Ubah warna teks menjadi putih saat di-hover */
        }
        
        #serv_hover .room_img img {
            transition: opacity 0.3s ease;
        }
        
        #serv_hover:hover .room_img img {
            opacity: 0.7; /* Kurangi opacity gambar saat di-hover */
        }

        .our_room .room {
            text-align: center;
            background-color: #fff;
            margin-bottom: 30px;
            transition: ease-in all 0.5s;
        }
        .our_room .room .bed_room {
            padding: 33px 30px;
        }

        .our_room .room .room_img figure {
            margin: 0;
        }
        .our_room .room {
            text-align: center;
            background-color: #fff;
            margin-bottom: 30px;
            transition: ease-in all 0.5s;
        }

        figure {
            display: block;
            margin-block-start: 1em;
            margin-block-end: 1em;
            margin-inline-start: 40px;
            margin-inline-end: 40px;
            unicode-bidi: isolate;
        }

    </style>
</body>

</html>