<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Mobil</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>


<body class="bg-light">
    <%- include('partials/navbar') %>

    <div class="main-content">
        <div class="container">
            <h1 id="judul" class="text-primary text-center mb-4">Data Mobil</h1>
            <div class="d-flex justify-content-end mb-3">
                <% if (user.role === "Admin") { %>
                <a id="baru" href="/tambah" class="btn btn-primary">Tambah Data Baru</a>
                <% } %>
            </div>
            <table class="table table-bordered table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>No.</th>
                        <th>Nama Mobil</th>
                        <th>Stok Mobil</th>
                        <th>Harga Sewa Mobil</th>
                        <th>Keterangan Mobil</th>
                        <% if (user.role === "Admin") { %>
                        <th colspan="2" class="text-center">Aksi</th>
                        <% } %>
                        <% if (user.role === "User") { %>
                            <th colspan="2">Status</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody id="data">
                    <% let nomor = 0; %>
                    <% barang.forEach(items => { %>
                        <% nomor += 1; %>
                        <tr>
                            <td><%= nomor %></td>
                            <td><%= items.nama %></td>
                            <td><%= items.stok %></td>
                            <td><%= items.harga %></td>
                            <td><%= items.keterangan %></td>
                            <% if (user.role === "Admin") { %>
                                <td class='text-center'>
                                    <a href='/edit/<%= items.id %>' class="btn btn-warning btn-sm">Edit</a>
                                </td>
                                <% if (user.role === "Admin") { %> <!-- Periksa apakah role = admin -->
                                    <td class='text-center'>
                                        <button onclick="deleteItem('<%= items.id %>')" class="btn btn-danger btn-sm">Hapus</button>
                                    </td>
                                <% } %>
                            <% } %>
                            <% if (user.role === "User") { %>
                                <td>
                                    <a href="/Sewa/<%= items.id %>" class="btn btn-primary">Sewa!!</a>
                                </td>
                            <% } %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <% if (typeof pagination !== 'undefined') { %>
                <%- include('partials/pagination', { pagination: pagination }) %>
            <% } %>
        </div>
    </div>


    <script>
        async function deleteItem(id) {
            console.log("Menghapus item dengan ID:", id); // Pastikan id dikirim dengan benar
            if (confirm("Apakah Anda yakin ingin menghapus item ini?")) {
                let result = await fetch(`/api/items/${id}`, {
                    method: "DELETE",
                    credentials: "same-origin" // Pastikan cookie token ikut dikirim
                });
            
                if (result.ok) {
                    alert("Item berhasil dihapus");
                    location.reload();
                } else {
                    alert("Gagal menghapus item");
                }
            }
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS for Sidebar Toggle -->
    <script>
        const menuToggle = document.getElementById("menu-toggle");
        const wrapper = document.getElementById("wrapper");

        menuToggle.addEventListener("click", () => {
            wrapper.classList.toggle("toggled");
        });
    </script>
    <!-- Custom CSS -->
    <style>
        #wrapper {
            display: flex;
            height: 100vh;
        }

        #sidebar {
            width: 250px;
            min-height: 100vh;
        }

        #page-content-wrapper {
            flex-grow: 1;
        }

        .toggled #sidebar {
            margin-left: -250px;
        }
    </style>
</body>

</html>