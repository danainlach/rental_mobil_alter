<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Permintaan Sewa</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    
    <div class="main-content">
        <div class="container mt-5">
            <h1 class="text-primary text-center mb-4">Daftar Permintaan Sewa</h1>
            
            <!-- Debug info -->
           <!--  <% if (requests && requests.length > 0) { %>
                <div class="mb-3">Total Requests: <%= requests.length %></div>
            <% } %> -->

            <table class="table table-bordered table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>No.</th>
                        <th>Nama Mobil</th>
                        <th>Penyewa</th>
                        <th>Status</th>
                        <th>Tanggal Request</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (requests && requests.length > 0) { %>
                        <% requests.forEach((request, index) => { %>
                            <tr>
                                <td><%= (pagination.current - 1) * pagination.limit + index + 1 %></td>
                                <td><%= request.Item ? request.Item.nama : 'N/A' %></td>
                                <td><%= request.User ? request.User.username : 'N/A' %></td>
                                <td><%= request.status %></td>
                                <td><%= new Date(request.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <% if (request.status === 'Pending') { %>
                                        <button class="btn btn-success btn-sm" onclick="approveRequest('<%= request.id %>')">Approve</button>
                                        <button class="btn btn-danger btn-sm" onclick="rejectRequest('<%= request.id %>')">Reject</button>
                                    <% } else { %>
                                        <%= request.status %>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">Tidak ada permintaan sewa</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

            <% if (typeof pagination !== 'undefined') { %>
                <%- include('partials/pagination', { pagination: pagination }) %>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Your existing scripts -->
    <script>
        async function approveRequest(id) {
            try {
                const response = await fetch(`/api/request/${id}/approve`, { 
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    }
                });
                if (response.ok) {
                    alert("Request berhasil disetujui");
                    location.reload();
                } else {
                    alert("Gagal menyetujui request");
                }
            } catch (err) {
                console.error("Error:", err);
                alert("Terjadi kesalahan");
            }
        }

        async function rejectRequest(id) {
            try {
                const response = await fetch(`/api/request/${id}/reject`, { 
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    }
                });
                if (response.ok) {
                    alert("Request berhasil ditolak");
                    location.reload();
                } else {
                    alert("Gagal menolak request");
                }
            } catch (err) {
                console.error("Error:", err);
                alert("Terjadi kesalahan");
            }
        }
    </script>
</body>
</html>
