<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Sewa Mobil</title>
      <!-- Bootstrap CSS -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
      <!-- Bootstrap Icon -->
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    
    <div class="main-content">
        <div class="container">
            <h1 class="text-primary text-center mb-4">Daftar Sewa Mobil</h1>
            <table class="table table-bordered table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>Nama</th>
                        <th>Stok</th>
                        <th>Harga</th>
                        <th>Detail</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (Array.isArray(barang) && barang.length > 0) { %>
                        <% let nomor = 0; %>
                        <% barang.forEach(items => { %>
                            <% nomor += 1; %>
                            <tr>
                                <td><%= items.nama %></td>
                                <td><%= items.stok %></td>
                                <td>Rp. <%= items.harga %></td>
                                <td><a href="/sewa/<%= items.id %>">Lihat Detail</a></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4">Tidak ada data mobil</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <% if (typeof pagination !== 'undefined') { %>
                <%- include('partials/pagination', { pagination: pagination }) %>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>