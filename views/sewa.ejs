<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Sewa Mobil</title>
      <!-- Bootstrap CSS -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
      <!-- Bootstrap Icon -->
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
      <link rel="stylesheet" href="/css/table-styles.css">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    
    <div class="main-content">
        <div class="container">
            <h1 class="text-primary text-center mb-4">Daftar Sewa Mobil</h1>
            
            <div class="card">
                <div class="card-body">
                    <table class="custom-table">
                        <thead>
                            <tr>
                                <th>Nama</th>
                                <th>Stok</th>
                                <th>Harga</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (Array.isArray(barang) && barang.length > 0) { %>
                                <% barang.forEach(items => { %>
                                    <tr>
                                        <td><%= items.nama %></td>
                                        <td><%= items.stok %></td>
                                        <td>Rp <%= items.harga.toLocaleString('id-ID') %></td>
                                        <td>
                                            <a href="/sewa/<%= items.id %>" class="table-action-btn btn-view" style="text-decoration: none;">
                                                <i class="bi bi-eye"></i> Detail
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="text-center">Tidak ada data mobil</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <% if (typeof pagination !== 'undefined') { %>
                <%- include('partials/pagination', { pagination: pagination }) %>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>