<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Sewa Mobil</title>
      <!-- Bootstrap CSS -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
      <!-- Bootstrap Icon -->
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-xs">
  <a class="navbar-brand text-primary" href="#" >Daftar Mobil</a>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <!-- Informasi User -->
                <li class="nav-item">
                    <span class="nav-link text-muted" id="user-info">
                        <% if (user) { %>
                        Welcome, <%= user.username %>
                        <% } else { %>
                        Welcome, Guest
                        <% } %>
                    </span>
                </li>
                <!-- Tombol Login atau Logout -->
                <li class="nav-item">
                    <% if (user) { %>
                    <a  class="btn btn-primary" href="/" id="logout-button">Kembali</a>
                    <% } else { %>
                    <a  class="btn btn-primary" href="/" id="login-button">Kembali</a>
                    <% } %>
                </li>
            </ul>
        </div>
    </nav>
  <table class="table table-bordered table-striped">
    <thead class="table-primary">
      <tr>
        <th>Nama</th>
        <th>Stok</th>
        <th>Harga</th>
        <th>Detail</th>
      </tr>
    </thead>
    <tbody>
      <% if (Array.isArray(barang) && barang.length > 0) { %>
        <% let nomor = 0; %>
        <% barang.forEach(items => { %>
          <% nomor += 1; %>
          <tr>
            <td><%= items.nama %></td>
            <td><%= items.stok %></td>
            <td>Rp. <%= items.harga %></td>
            <td><a href="/Sewa/<%= items.id %>">Lihat Detail</a></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="4">Tidak ada data mobil</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
</body>
</html>